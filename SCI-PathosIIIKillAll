local gun;

for i,v in next,game.Players.LocalPlayer.Character:GetDescendants() do
    if v.Name == "Fired" then
        gun = v.Parent
    end
end

function remote(head)
    gun.Fired:FireServer(
    gun,
        {
            {
                head,
                Vector3.new(head.Position),
                Vector3.new(head.Position)
            }
        },
        1
    )
end

while wait() do
  for i,v in pairs(game.Players:GetChildren()) do
      if v.Name == game.Players.LocalPlayer.Name then
          continue;
      end
      for _,l in pairs(v.Character:GetChildren()) do
          if l.Name == "Head" then
             pcall(remote, l)
          end
      end
  end
end
